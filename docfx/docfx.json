{
  "metadata": [
    {

      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "../_site",
    "template": [
      "default",
      "modern",
      "template/material"
    ],
    "globalMetadata": {
      "_appName": "DrillSergeant",
      "_appTitle": "DrillSergeant",
      "_appLogoPath": "images/logo.svg",
      "_enableSearch": true,
      "pdf": true
    }
  }
}